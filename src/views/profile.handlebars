
<html>
  <head>
    <title>{{title}}</title>
  </head>
  <body>
    <section class='vh-100 gradient-custom'>
      <div class='container py-5 h-100'>
        <div class='row d-flex justify-content-center align-items-center h-100'>
          <div class='col-12 col-md-8 col-lg-6 col-xl-5'>
            <div class='card' style='border-radius: 1rem;'>
              <div class='card-body p-4 text-start'>
                <h2 class='fw-bold mb-3 text-center'>Profile <span class='text-uppercase'>{{user.role}}</span></h2>
                <div class='mb-4'>
                  <p><strong>Role:</strong> {{user.role}}</p>
                  {{#if user.first_name}}
                    <p><strong>Name:</strong> {{user.first_name}}</p>
                  {{/if}}
                  {{#if user.last_name}}
                    <p><strong>Last Name:</strong> {{user.last_name}}</p>
                  {{/if}}
                  <p><strong>Email:</strong> {{user.email}}</p>
                  {{#ifNotNull user.age}}
                    <p><strong>Age:</strong> {{user.age}} Years</p>
                  {{/ifNotNull}}
                </div>
                <div class='d-grid gap-2 mb-3'>
                  <a class='btn btn-dark btn-lg' href='/products'>Buy products</a>
                </div>
                {{#if (eq user.role 'premium')}}
                  <div class='d-grid gap-2 mb-3'>
                    <button type='button' class='btn btn-primary btn-lg' disabled>Manage Products</button>
                  </div>
                {{/if}}
                <div class='d-grid gap-2 mb-3'>
                  <a class='btn btn-outline-primary btn-lg' href='/chat'>Chat</a>
                </div>
                <div class='d-grid gap-2 mb-3'>
                  <a class='btn btn-warning btn-lg' href='/current'>Current Session</a>
                </div>
                <div class='d-grid gap-2 mb-3'>
                  <a class='btn btn-outline-danger btn-lg' href='api/session/auth/logout'>Log out</a>
                </div>
                <div class='text-center border-top'>
                  <h3 class='mb-0 mt-3'>Villa Frida (Mexican Fusion Food Tacos & Tostadas)</h3>
                  <p class='form_p'>Shop <span class='fw-bold'>Villa Frida</span></p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
    <script src='/js/profile/index.js'></script>
  </body>
</html>